@model IEnumerable<ASPCoreFirstApp.Models.ProductModel>

<div class="container d-flex flex-wrap">
    @foreach (var item in Model)
    {
    <div class="card" style="width: 18rem; margin:5px;">
        @{
            //get just the first word of the item.name for searching purposes
            var s = item.Name;
            //ternary operator - look it up
            var firstWord = s.IndexOf(" ") > -1 ? s.Substring(0, s.IndexOf(" ")) : s;
        }
        @*@<img src="https://i.pravatar.cc/150?u=@item.Id" class="card-img-top" />*@
        <img src="https://loremflickr.com/160/120/@firstWord?lock=@item.Id" class="card-img-top" />
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>

            <p class="card-text">@Html.DisplayFor(modelItem => item.Price)</p>
            <a href="/products/ShowOneProduct/@item.Id" class="btn btn-primary">Show Details</a>
            <a href="/products/ShowEditForm/@item.Id"class="btn btn-primary">Edit</a>
            <a href="products/
        </div>
    </div>
    }

</div>